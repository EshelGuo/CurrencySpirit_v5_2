<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--#1, 比特币-->
    <TextView
        android:text="#1, 比特币"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:id="@+id/tv_rank_chinesename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--BTC 粗体-->
    <TextView
        android:text="BTC"
        android:id="@+id/tv_symbo"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_alignLeft="@id/tv_rank_chinesename"
        android:layout_below="@id/tv_rank_chinesename"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--市值-->
    <TextView
        android:text="市值$91,666,442,868.00"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:layout_alignLeft="@id/tv_rank_chinesename"
        android:layout_below="@id/tv_symbo"
        android:id="@+id/tv_turnnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--涨跌 红黑圆角背景-->
    <TextView
        android:text="-5.43%"
        android:layout_marginRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/text_white"
        android:textStyle="bold"
        android:background="@drawable/drawable_percent_up"
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--$5490.00-->
    <TextView
        android:text="$5490.00"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/tv_percent"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>